{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build and run",
			"type": "shell",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"command": "rm maps/*; rm build/*; yarn tsc; and yarn start",
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"label": "Build and test",
			"type": "shell",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"command": "rm maps/*; rm build/*; yarn tsc; and yarn test",
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
	]
}